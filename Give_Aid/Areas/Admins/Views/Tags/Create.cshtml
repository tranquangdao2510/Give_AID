@model Give_Aid.Models.DataAccess.Tag

@{
    ViewBag.Title = "Create"; Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Quick Example</h3>
    </div> <!-- /.card-header --> <!-- form start -->
    @using (Html.BeginForm("Create", "Tags", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-7">
                    <div class="form-group">
                        @Html.LabelFor(model => model.TagName, htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TagName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                Show @Html.RadioButtonFor(model => model.Status, "True")
                                Hidden @Html.RadioButtonFor(model => model.Status, "False")

                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/Admins/Tags/Index" class="btn btn-danger">Back to List</a>
        </div>

    }
</div>

@section js {
    <script src="~/Areas/Admins/Content/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script type="text/javascript">
        $(function () { $(".datepicker").datepicker({ dateFormat: "mm/dd/yy", changeMonth: true, changeMonth: true, }); });
        $(function () { $(".datepicker1").datepicker({ dateFormat: "mm/dd/yy", changeMonth: true, changeMonth: true }); });
    </script>
}
