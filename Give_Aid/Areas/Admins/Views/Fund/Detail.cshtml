@model Give_Aid.Models.DataAccess.Fund

@{

    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";

}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Detail Fund</h3>
    </div> <!-- /.card-header --> <!-- form start -->

    <div class="card-body">
        <div class="row">
            <div class="col-7">
                <div class="form-group">
                    @Html.LabelFor(model => model.FundId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.FundId, new { disabled = "disabled" })
                        
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FundName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.FundName, new { disabled = "disabled" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Description, new { disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" }, @id = "conTent1", @rows = 2, @cols = 10, @style = "witdh=" })
  
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="form-group">
                    @Html.LabelFor(model => model.FundImg, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.FundImg, new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TargetAmount, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TargetAmount, new { @class = "form-control", disabled = "disabled" })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CurentAmount, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CurentAmount, new { @class = "form-control", disabled = "disabled" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryId, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CategoryId, new { @class = "form-control", disabled = "disabled" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.OrganizationId, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.OrganizationId, new { @class = "form-control", disabled = "disabled" })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.TextBoxFor(model => model.Status, new { @class = "form-control", disabled = "disabled" })

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /.card-body -->
    <div class="card-footer">
        <a href="/Admins/Fund/Index" class="btn btn-danger">Back</a>
    </div>

</div>






