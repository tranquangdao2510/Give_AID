@model PagedList.IPagedList<Give_Aid.Models.DataAccess.Partner>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";

}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Partner</h3>

                <div class="card-tools">
                    <form action="Partner" method="get">
                        <div class="input-group input-group-sm" style="width: 220px;">
                            <div class="input-group-append"><a href="/Admins/Partner/Create" class=" btn btn-success">Create at</a></div>

                            <input type="text" name="search_name" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Image</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>CreatedDate</th>
                            <th>UpdatedDate</th>
                            <th>Status</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PartnerId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PartnerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    <img src="@item.Image" alt="Alternate Text" width="100px" />

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    <a href="/Admins/Partner/Edit/@item.PartnerId"><span class="fa fa-edit"></span></a> |

                                    @Html.ActionLink("Delete", "Delete", new { id = item.PartnerId }, new { @onclick = "return confirm('you may want to delete ?')" })

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, search_name = ViewBag.search_name }))
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
