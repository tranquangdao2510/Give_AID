@model PagedList.IPagedList<Give_Aid.Models.DataAccess.Blog>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}
<div style="padding-top:10px;margin-bottom:10px">
    <a href="/Admins/Blogs/Create" class="btn btn-primary">Create</a>
    <a href="/Admins/Blogs" class="btn btn-primary">Reload</a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 style="margin-top:5px" class="card-title">List</h3>
                <form action="" method="get" style="margin-left:30px">
                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="search_title" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Tag Name
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                BlogImage
                            </th>
                            <th>
                                Content
                            </th>
                            <th>
                                CreateDate
                            </th>
                            <th>
                                UpdatedDate
                            </th>
                            <th>
                                Status
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BlogId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tag.TagName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @item.Description.Substring(0, Math.Min(item.Description.Length, 5));
                                </td>
                                <td>
                                    <img src="@item.BlogImage" width="50px" />
                                </td>
                                <td>
                                    @item.Description.Substring(0, Math.Min(item.Content.Length, 5));
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UpdatedDate)
                                </td>
                                <td>
                                    @{
                                        if (item.Status == true)
                                        {
                                            <p>Show</p>
                                        }
                                        else
                                        {
                                            <p>Hidden</p>
                                        }
                                    }
                                </td>
                                <td>
                                    <a href="/Admins/Admin/Edit/@item.BlogId"><span class="fa fa-edit"></span></a> |
                                    @Html.ActionLink("Edit", "Edit", new { id = item.BlogId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.BlogId }, new { @onclick = "return confirm('you may want to delete ?')" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <div class="float-left">@Html.PagedListPager(Model, page => Url.Action("Index", new { page, search_name = @ViewBag.search_name }))</div>
    </div>
</div>

