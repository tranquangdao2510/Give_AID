@model IEnumerable<Give_Aid.Models.DataAccess.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="/Admins/Blogs/Create" class="btn btn-primary">Create</a>
    <a href="/Admins/Blogs" class="btn btn-primary">Reload</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tag.TagName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BlogImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tag.TagName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @item.Description.Substring(0, Math.Min(item.Description.Length, 10));
        </td>
        <td>
            <img src="@item.BlogImage" width="100px" />
        </td>
        <td>
            @item.Description.Substring(0, Math.Min(item.Content.Length, 20));
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            <a href="/Admins/Admin/Edit/@item.BlogId"><span class="fa fa-edit"></span></a> |
            @Html.ActionLink("Edit", "Edit", new { id = item.BlogId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BlogId }, new { @onclick = "return confirm('you may want to delete ?')" })
        </td>
    </tr>
}

</table>
