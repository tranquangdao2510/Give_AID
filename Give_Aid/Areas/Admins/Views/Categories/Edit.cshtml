@model Give_Aid.Models.DataAccess.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/_Layout.cshtml";
}

<h2> Update </h2>
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Quick Example</h3>
    </div> <!-- /.card-header --> <!-- form start -->
    @using (Html.BeginForm("Edit", "Categories", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CategoryId)
            <div class="row">
                <div class="col-7">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control datepicker " } })
                            @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UpdatedDate, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.UpdatedDate, new { htmlAttributes = new { @class = "form-control datepicker1" } })
                            @Html.ValidationMessageFor(model => model.UpdatedDate, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                True @Html.RadioButtonFor(model => model.Status, "True")
                                False @Html.RadioButtonFor(model => model.Status, "False")

                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/Admins/Categories/Index" class="btn btn-danger">Back</a>
        </div>

    }
</div>

@section js {
    <script src="~/Areas/Admins/Content/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script type="text/javascript">
        $(function () { $(".datepicker").datepicker({ dateFormat: "dd/mm/yy", changeMonth: true, changeMonth: true}); });
        $(function () { $(".datepicker1").datepicker({ dateFormat: "dd/mm/yy", changeMonth: true, changeMonth: true}); });
        $(function () { $(".datepicker2").datepicker({ dateFormat: "dd/mm/yy", changeMonth: true, changeMonth: true }); });
    </script>
}
