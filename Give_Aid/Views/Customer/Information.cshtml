@model Give_Aid.Models.DataAccess.Customer

@{
    ViewBag.Title = "Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="breadcrumbs-page-wrap">
    <div class="bg-fixed pos-rel breadcrumbs-page">
        <div class="container">
            <h1>customer information</h1>
            <nav aria-label="breadcrumb" class="breadcrumb-wrap">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">customer information</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<section class="wide-tb-100 map-bg bg-navy-blue pt-0">
    <div class="container">
        <div class="pos-rel become-volunteers bg-orange">
            <div class="row no-gutters">
                <div class="col-12 col-lg-8 col-md-12">
                    <div class="inner-form">
                        <h1 class="heading-main light-mode">
                            <small>Become A Volunteer</small>
                        </h1>
                        <div class="form">
                            @using (Html.BeginForm("Information", "Customer", FormMethod.Post))
                            {

                                var session = Session[Give_Aid.Common.CommonConstants.USER_SESSION] as Give_Aid.Common.CustomerLogin;

                                @Html.AntiForgeryToken()
                                <div class="card-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.CustomerId)
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.CustomerName, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => session.CustomerName, new { htmlAttributes = new { @class = "form-control", @Value = @session.CustomerName } })
                                                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                           

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => session.Address, new { htmlAttributes = new { @class = "form-control", @Value = @session.Address } })
                                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => session.Email, new { htmlAttributes = new { @class = "form-control", @Value = @session.Email } })
                                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.EditorFor(model => session.Phone, new { htmlAttributes = new { @class = "form-control", @Value = @session.Phone } })
                                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label" })
                                                <div class="col-md-10">
                                                    @Html.PasswordFor(model => model.PassWord, new { @class = "form-control", @type = "password" })
                                                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                           
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-outline-light mt-3">Send Request</button>
                                    
                                </div>
                            }
                        </div>

                    </div>
                </div>

                <div class="col-12 col-lg-4 col-md-12 volunteers-img-bg">

                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <h1 class="heading-main light-mode">
                        <small>Help Other People</small>
                        We Dream to Create A Bright Future Of The Underprivileged Children
                    </h1>
                </div>
                <div class="col-sm-12 text-md-right">
                    <a href="donation-page.html" class="btn btn-primary">Donate Now</a>
                </div>
            </div>
        </div>
    </div>
</section>

