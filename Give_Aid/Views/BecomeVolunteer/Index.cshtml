@model Give_Aid.Models.DAO.BecomVolunteerDao
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<!-- Page Breadcrumbs Start -->
<section class="breadcrumbs-page-wrap">
    <div class="bg-fixed pos-rel breadcrumbs-page">
        <div class="container">
            <h1>Become Volunteerss</h1>
            <nav aria-label="breadcrumb" class="breadcrumb-wrap">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Become Volunteerss</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!-- Page Breadcrumbs End -->
<!-- Joining Process Start -->
<section class="wide-tb-100">
    <div class="container">
        @if (ViewBag.msg != null)
        {
            <div id="success-alert" class="alert alert-success">@ViewBag.msg</div>
        }
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-12">
                <div class="text-center">
                    <img src="/content/assets/images/about_img.png" alt="">
                </div>
            </div>
            <div class="col-lg-5 col-md-12">
                <h1 class="heading-main">
                    <small>Joining Process</small>
                    Requirements For A Volunteer
                </h1>

                <p>The secret to happiness lies in helping others. Never underestimate the difference YOU can make in the lives of the poor, the abused and the helpless. Spread sunshine in their lives no matter what the weather may be.</p>

                <div class="mb-5 mt-5">
                    <ul class="list-unstyled icons-listing theme-green">
                        <li>Third spirit you behold don’t grass lesser divide they are man.</li>
                        <li>Can not two very was above man abundantly also second.</li>
                        <li>Together herb shall were bearing fill grass made fill heaven.</li>
                    </ul>
                </div>

                <div class="d-flex">
                    <a class="nav-link btn btn-default mr-3" href="/Volunteer">Join Now</a>
                    @foreach (var item in Model.GetContacts)
                    {
                        <div class="about-phone">
                            <i data-feather="phone-call"></i>
                            Conatct Us <br> @item.Phone
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>
<!-- Joining Process End -->
<!-- Faq's Style Start -->
<section class="wide-tb-100 map-bg bg-navy-blue pt-0">
    <div class="container">
        <div class="pos-rel become-volunteers bg-orange">
            <div class="row no-gutters">
                <div class="col-12 col-lg-6 col-md-12">
                    <div class="inner-form">
                        <h1 class="heading-main light-mode">
                            <small>Become A Volunteer</small>
                        </h1>
                        <div class="form">
                            @if (ViewBag.validate != null)
                            {
                                <div id="error-alert" class="alert alert-warning">@ViewBag.validate</div>
                            }
                            @if (ViewBag.valiimg != null)
                            {
                                <div id="error-alertimg" class="alert alert-warning">@ViewBag.valiimg</div>
                            }
                            @using (Html.BeginForm("index", "BecomeVolunteer", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="fullname"><strong>Full Name</strong></label>
                                    @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control form-light" } })
                                    @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="email"><strong>Email Address</strong></label>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-light" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="email"><strong>Address</strong></label>
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control form-light" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="phone"><strong>Phone Number</strong></label>
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control form-light" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="refrence"><strong>Refrence Contact</strong></label>
                                    @Html.EditorFor(model => model.RefrenceContact, new { htmlAttributes = new { @class = "form-control form-light" } })
                                    @Html.ValidationMessageFor(model => model.RefrenceContact, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="msg"><strong>Your Comments</strong></label>
                                    @Html.TextAreaFor(model => model.Message, new { @rows = "5", @class = "form-control form-light" })
                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="msg"><strong>BirthDay</strong></label>
                                    @Html.EditorFor(model => model.BirthDay, new { htmlAttributes = new { @class = "form-control datepicker " } })
                                    @Html.ValidationMessageFor(model => model.BirthDay, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="msg"><strong>Image</strong></label>
                                    <input name="fileimage" class="form-control form-light" type="file" />
                                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                </div>
                                <button type="submit" class="btn btn-outline-light mt-3">Send Request</button>
                            }
                        </div>

                    </div>
                </div>

                <div class="col-12 col-lg-6 col-md-12 volunteers-img-bg">

                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <h1 class="heading-main light-mode">
                        <small>Help Other People</small>
                        We Dream to Create A Bright Future Of The Underprivileged Children
                    </h1>
                </div>
                <div class="col-sm-12 text-md-right">
                    <a href="donation-page.html" class="btn btn-primary">Donate Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Faq's Style End -->
<!-- Our Partners Start -->
<section class="wide-tb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <h1 class="heading-main">
                    <small>Global Providers</small>
                    Our World Wide Partner
                </h1>
            </div>
            <div class="col-sm-12">
                <div class="owl-carousel owl-theme" id="home-clients">

                    <!-- Client Logo -->
                    @foreach (var item in Model.GetPartners)
                    {
                        <div class="item">
                            <div class="clients-logo">
                                <img src="@item.Image" alt="">
                            </div>
                        </div>
                    }
                    <!-- Client Logo -->

                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Areas/Admins/Content/plugins/jquery-ui/jquery-ui.min.js"></script>
<script>
    $("#success-alert").fadeTo(10000, 5000).slideUp(2000, function () {
        $("#success-alert").slideUp(500);
    });
    $("#error-alert").fadeTo(10000, 5000).slideUp(2000, function () {
        $("#error-alert").slideUp(500);
    });
    $("#error-alertimg").fadeTo(10000, 5000).slideUp(2000, function () {
        $("#error-alertimg").slideUp(500);
    });
</script>
<!-- Our Partners End -->
