@model Give_Aid.Models.DAO.BlogClientDao
<!-- Page Breadcrumbs Start -->
<section class="breadcrumbs-page-wrap">
    <div class="bg-fixed pos-rel breadcrumbs-page">
        <div class="container">
            <h1>Blog Detail</h1>
            <nav aria-label="breadcrumb" class="breadcrumb-wrap">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Blog Detail</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!-- Page Breadcrumbs End -->
<!-- Blog Post Single Start -->
<section class="wide-tb-100">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Blogs)
            {
                <div class="col-lg-9 col-md-12">
                    <div class="sidebar-spacer">
                        <div class="d-flex">
                            <div class="post-date txt-blue">@item.CreateDate</div>
                            <div class="mx-2">/</div>
                            <div class="post-category">@item.Tag.TagName</div>
                        </div>
                        <h1 class="heading-main">
                            @item.Title
                        </h1>

                        <!-- Causes Single Wrap -->
                        <div class="causes-wrap single">
                            <div class="img-wrap">
                                <img src="@item.BlogImage" alt="">
                            </div>

                            <div class="content-wrap-single">

                                <p>item.Content</p>

                            </div>

                            <div class="share-this-wrap">
                                <div class="share-line">
                                    <div class="pr-4">
                                        <strong>Share This</strong>
                                    </div>
                                    <div class="pl-4">
                                        <ul class="list-unstyled list-inline mb-0">
                                            <li class="list-inline-item"><a href="https://www.fb.com"><i class="icofont-facebook"></i></a></li>
                                            <li class="list-inline-item"><a href="https://www.twitter.com"><i class="icofont-twitter"></i></a></li>
                                            <li class="list-inline-item"><a href="https://www.instagram.com/"><i class="icofont-instagram"></i></a></li>
                                            <li class="list-inline-item"><a href="https://www.behance.net/"><i class="icofont-behance"></i></a></li>
                                            <li class="list-inline-item"><a href="https://www.youtube.com/"><i class="icofont-youtube-play"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- Causes Single Wrap -->
                        <!-- Comments List -->
                        <div class="commnets-reply">
                            <div class="fb-comments" data-href="http://localhost:63372/Blog/BlogDetail/@item.BlogId" data-width="790" data-numposts="5"></div>
                        </div>
                        <!-- Comments List -->

                    </div>

                </div>}
            <div class="col-lg-3 col-md-12">
                <aside class="row sidebar-widgets">
                    <!-- Sidebar Primary Start -->
                    <div class="sidebar-primary col-lg-12 col-md-6">
                        <!-- Widget Wrap -->
                        <div class="widget-wrap">
                            <h3 class="widget-title">Search Keywords</h3>

                            <form class="sidebar-search" action="/Blog">
                                <input name="search_title" type="text" class="form-control" placeholder="Enter here search...">
                                <button type="submit" class="btn-link"><i class="icofont-search"></i></button>
                            </form>
                        </div>
                        <!-- Widget Wrap -->
                        <!-- Widget Wrap -->
                        <div class="widget-wrap">
                            <h3 class="widget-title">Categories</h3>

                            <div class="blog-list-categories">
                                <ul class="list-unstyled icons-listing theme-orange mb-0">
                                    @foreach (var item in Model.Tags)
                                    {
                                    <li><a href="/Blog?search_tag=@item.TagId">@item.TagName</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- Widget Wrap -->
                        <!-- Widget Wrap -->
                        <div class="widget-wrap">
                            <h3 class="widget-title">News Posts</h3>

                            <div class="popular-post">
                                <ul class="list-unstyled">
                                    @foreach (var item in Model.BlogsNewpost)
                                    {
                                    <li>
                                        <img src="@item.BlogImage" alt="">
                                        <div>
                                            <h6><a href="/Blog/BlogDetail/@item.BlogId">@item.Title</a></h6>
                                            <small>@item.CreateDate</small>
                                        </div>
                                    </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- Widget Wrap -->
                    </div>
                    <!-- Sidebar Primary End -->
                    <!-- Sidebar Secondary Start -->
                    <div class="sidebar-secondary col-lg-12 col-md-6">
                        <div class="widget-wrap">
                            <div class="sidebar-ads">
                                <img src="/content/assets/images/sidebar_ads.jpg" alt="">
                                <div class="content">
                                    <i class="charity-donate_money"></i>
                                    <h3>Let Us Come Together To Make A Difference</h3>
                                    <a href="donation-page.html" class="btn btn-secondary">Donate Now</a>
                                </div>
                            </div>
                        </div>
                        <!-- Widget Wrap -->
                    </div>
                    <!-- Sidebar Secondary End -->


                </aside>
            </div>
        </div>
    </div>
</section>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v11.0&appId=893527747819145&autoLogAppEvents=1" nonce="gndPEMpN"></script>
<!-- Blog Post Single End -->
